<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.weizujie.dao.TypeMapper">

    <insert id="saveType" parameterType="com.weizujie.pojo.Type">
        insert into t_type values(#{id}, #{name})
    </insert>

    <delete id="deleteType">
        delete from t_type where id = #{id}
    </delete>

    <select id="getAllType" resultType="com.weizujie.pojo.Type">
      select * from t_type
    </select>

    <select id="getTypeByName" resultType="com.weizujie.pojo.Type">
        select * from t_type where name = #{name}
    </select>
</mapper>